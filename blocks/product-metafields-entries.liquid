{% comment %}
  Product Metafields Entries Block
  
  Displays product entries count and badge multiplier
  Can be inserted anywhere in product details or product cards
{% endcomment %}

{%- liquid
  assign block_settings = block.settings
  assign product_resource = closest.product | default: product
-%}

{% render 'product-metafields-entries', product: product_resource %}

{% stylesheet %}
  .product-metafields-entries {
    font-size: 12px;
    font-weight: 900;
    display: flex;
    width: 100%;
    align-items: center;
    gap: 12px;
    margin-top: 8px;
  }
  
  /* When adjacent to price container, position inline */
  .product-price-container + .product-metafields-entries {
    margin-top: 0;
    width: auto;
    flex-shrink: 0;
    float: inline-end;
  }

  /* When inside a group with price, make group flex */
  .group-block:has(.product-price-container):has(+ * .product-metafields-entries),
  .group-block:has(.product-price-container) + *:has(.product-metafields-entries) {
    display: flex;
    flex-wrap: nowrap;
    align-items: center;
    gap: 12px;
  }

  /* Ensure price container and metafields are inline when adjacent blocks */
  .product-price-container:has(+ .product-metafields-entries) {
    display: inline-flex;
    width: auto;
  }
  
  .product-metafields-entries .entries {
    display: flex;
    align-items: center;
    gap: 8px;
  }
  
  .product-item-icon {
    font-size: 1.2em;
    line-height: 1;
  }
  
  .entries_meta_cl {
    font-style: italic;
    line-height: 25px;
    font-weight: 900;
    padding-right: 15px;
  }
  
  .product-entry-badge {
    padding: 4px 12px;
    border-radius: 12px;
    font-size: 0.85em;
    font-weight: 600;
    white-space: nowrap;
    height: fit-content !important;
    background: linear-gradient(180deg, rgba(192, 2, 255, 1), rgba(255, 59, 184, 1) 100%) !important;
    color: #ffffff !important;
  }

  /* Ensure price container flex layout works */
  .product-price-container .product-price-wrapper {
    flex-wrap: nowrap !important;
  }

  .product-price-container .no-js-hidden {
    display: flex;
  }

  @media (max-width: 345px) {
    .product-price-container .no-js-hidden {
      display: block;
    }
  }
{% endstylesheet %}

{% schema %}
{
  "name": "t:names.product_entries_badge",
  "settings": [
    {
      "type": "header",
      "content": "t:content.appearance"
    },
    {
      "type": "select",
      "id": "alignment",
      "label": "t:settings.alignment",
      "options": [
        {
          "value": "left",
          "label": "t:options.left"
        },
        {
          "value": "center",
          "label": "t:options.center"
        },
        {
          "value": "right",
          "label": "t:options.right"
        }
      ],
      "default": "left"
    }
  ],
  "presets": [
    {
      "name": "t:names.product_entries_badge",
      "category": "t:categories.product"
    }
  ]
}
{% endschema %}

